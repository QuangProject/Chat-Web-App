<section class="h-100 bg-light register">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="/img/sign-up.jpg" alt="Register photo" class="img-fluid" />
                        </div>
                        <div class="col-xl-6">
                            <form id="register-form" method="post">
                                <div class="card-body pt-md-5 text-black">
                                    <h3 class="mb-5 text-uppercase text-center">Registration form</h3>

                                    <p id="register-error" class="text-danger text-center"></p>

                                    <div class="form-outline mb-4">
                                        <label for="register-username" class="form-label fw-bold">Username</label>
                                        <input type="text" id="register-username" name="username" class="form-control"
                                            autocomplete="off" />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label for="register-password"
                                                    class="form-label fw-bold">Password</label>
                                                <input type="password" id="register-password" name="password"
                                                    class="form-control" autocomplete="off" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label for="register-confirm-password"
                                                    class="form-label fw-bold">Confirm Password</label>
                                                <input type="password" id="register-confirm-password"
                                                    class="form-control" autocomplete="off" />
                                                <span asp-validation-for="Input.ConfirmPassword"
                                                    class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label for="register-first-name" class="form-label fw-bold">First
                                                    Name</label>
                                                <input type="text" id="register-first-name" name="first-name"
                                                    class="form-control" autocomplete="off" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label for="register-last-name" class="form-label fw-bold">Last
                                                    Name</label>
                                                <input type="text" id="register-last-name" name="last-name"
                                                    class="form-control" autocomplete="off" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4 py-2">
                                        <div class="d-flex align-items-center">
                                            <h6 class="mb-0 me-4 fw-bold">Gender: </h6>
                                            <div class="form-check form-check-inline mb-0 me-4">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="register-male-gender" autocomplete="off" value="true" />
                                                <label class="form-check-label" for="register-male-gender">Male</label>
                                            </div>

                                            <div class="form-check form-check-inline mb-0 me-4">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="register-female-gender" autocomplete="off" value="false" />
                                                <label class="form-check-label" for="register-female-gender">Female</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label for="register-birthday" class="form-label fw-bold">Birthday</label>
                                        <input type="date" id="register-birthday" name="birthday" class="form-control"
                                            autocomplete="off" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label for="register-email" class="form-label fw-bold">Email</label>
                                        <input type="text" id="register-email" name="email" class="form-control"
                                            autocomplete="off" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label for="register-telephone" class="form-label fw-bold">Telephone</label>
                                        <input type="text" id="register-telephone" name="telephone" class="form-control"
                                            autocomplete="off" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label for="register-address" class="form-label fw-bold">Address</label>
                                        <input type="text" id="register-address" name="address" class="form-control"
                                            autocomplete="off" />
                                    </div>

                                    <div class="d-flex justify-content-end pt-3">
                                        <a class="btn btn-light" href="/register">Reset all</a>
                                        <button type="submit" class="btn btn-warning ms-2">Register</button>
                                    </div>
                                </div>
                            </form>

                            <div class="px-3 mb-3">
                                <div class="or-container">
                                    <div class="line-separator"></div>
                                    <div class="or-label">OR</div>
                                    <div class="line-separator"></div>
                                </div>
                                <form id="external-account gSignInWrapper" asp-page="./ExternalLogin"
                                    asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                                    <button type="submit" id="customBtn" class="customGPlusSignIn" name="provider"
                                        value="Google">
                                        <span class="icon"></span>
                                        <span class="buttonText">Sign up with Google</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>