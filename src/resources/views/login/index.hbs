<section class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/img/chat-app-2.png')"></div>
    <div class="contents order-2 order-md-1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <h3 class="mb-5 text-center">Login to <strong>Chat App</strong></h3>
                    <form id="login-form" method="post">

                        <p id="login-error" class="text-danger text-center">
                            {{#if error}}
                            {{error}}
                            {{/if}}
                        </p>

                        <div class="form-group first">
                            <label for="login-username" class="form-label fw-bold">Username</label>
                            <input type="text" id="login-username" class="form-control" autocomplete="off" />
                        </div>
                        <div class="form-group last my-3">
                            <label for="login-password" class="form-label fw-bold">Password</label>
                            <input type="password" id="login-password" class="form-control" autocomplete="off" />
                        </div>

                        <div class="d-flex mb-5 align-items-center">
                            <label asp-for="Input.RememberMe" class="control control--checkbox mb-0">
                                <span class="caption">Remember me</span>
                                <input type="checkbox" asp-for="Input.RememberMe" />
                                <div class="control__indicator"></div>
                            </label>
                            <span class="ms-auto"><a id="forgot-password" href="#"
                                    class="forgot-pass text-decoration-none">Forgot Password</a></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Sign in" class="btn btn-primary">
                        </div>
                    </form>
                    <div class="or-container">
                        <div class="line-separator"></div>
                        <div class="or-label">OR</div>
                        <div class="line-separator"></div>
                    </div>
                    <div id="external-account gSignInWrapper" class="text-center">
                        <a href="/login/auth/google" id="customBtn" class="customGPlusSignIn text-decoration-none">
                            <span class="icon"></span>
                            <span class="buttonText">Sign in with Google</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>