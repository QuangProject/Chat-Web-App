<header class="border-bottom bg-light header">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none me-lg-3">
                <img src="/img/logo.png" alt="Logo" width="50px">
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto my-3 my-lg-0 justify-content-center fw-bold">
                <li><a href="/" class="nav-link px-3 link-dark">Home</a></li>
                <li><a href="/inbox" class="nav-link px-3 link-dark">My Inbox</a></li>
                <li><a href="/send-request" class="nav-link px-3 link-dark">Send Friend Request</a></li>
                <li><a href="/list-request" class="nav-link px-3 link-dark">Friend Request List</a></li>
                <li><a href="/list-friend" class="nav-link px-3 link-dark">List Friend</a></li>
            </ul>

            {{#if user }}
            <div class="row">
                <nav class="header-nav ms-auto">
                    <ul class="d-flex align-items-center">
                        <li class="nav-item dropdown">
                            <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
                                <i class="fa-regular fa-bell fa-lg"></i>
                                <span class="badge bg-primary badge-number">4</span>
                            </a><!-- End Notification Icon -->

                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications">
                                <li class="dropdown-header">
                                    You have 4 new notifications
                                    <a href="#">
                                        <span class="badge rounded-pill bg-primary p-2 ms-2">
                                            View
                                            all
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                {{!-- <li class="notification-item">
                                    <i class="fa-solid fa-circle-exclamation" style="color: #ffdd00;"></i>
                                    <div>
                                        <h4>Lorem Ipsum</h4>
                                        <p>Quae dolorem earum veritatis oditseno</p>
                                        <p>30 min. ago</p>
                                    </div>
                                </li>

                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <li class="notification-item">
                                    <i class="fa-regular fa-circle-xmark" style="color: #ff0000;"></i>
                                    <div>
                                        <h4>Atque rerum nesciunt</h4>
                                        <p>Quae dolorem earum veritatis oditseno</p>
                                        <p>1 hr. ago</p>
                                    </div>
                                </li>

                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <li class="notification-item">
                                    <i class="fa-sharp fa-regular fa-circle-check" style="color: #3ce000;"></i>
                                    <div>
                                        <h4>Sit rerum fuga</h4>
                                        <p>Quae dolorem earum veritatis oditseno</p>
                                        <p>2 hrs. ago</p>
                                    </div>
                                </li>

                                <li>
                                    <hr class="dropdown-divider">
                                </li> --}}

                                {{#if notifications}}
                                {{#each notifications }}
                                <li class="notification-item">
                                    <i class="fa-solid fa-circle-info" style="color: #005eff;"></i>
                                    <a href="/message/{{this.conversation_id}}" class="text-decoration-none text-dark">
                                        <h4>You have message from {{this.first_name}}</h4>
                                        {{!-- <p>Quae dolorem earum veritatis oditseno</p> --}}
                                        <p>{{this.time_receipt}}</p>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                {{/each}}
                                {{else}}
                                {{!-- Display do not have notification --}}
                                <li class="notification-item">
                                    <i class="fa-solid fa-circle-info" style="color: #005eff;"></i>
                                    <div>
                                        <h4>No notification found!</h4>
                                    </div>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                {{/if}}

                                <li class="dropdown-footer">
                                    <a href="#" class="text-decoration-none">Show all notifications</a>
                                </li>

                            </ul><!-- End Notification Dropdown Items -->

                        </li>

                        <li class="nav-item dropdown pe-3">
                            <a href="#" class="nav-link nav-profile d-flex align-items-center pe-0" href="#"
                                data-bs-toggle="dropdown">
                                {{#if user.avatar}}
                                <img src="{{ user.avatar }}" alt="Profile" class="rounded-circle">
                                {{else}}
                                <img src="/img/default-avatar.png" alt="Profile" class="rounded-circle">
                                {{/if}}
                                <span class="d-none d-md-block dropdown-toggle ps-2"></span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                                <li class="dropdown-header">
                                    <h6>{{ user.username }}</h6>
                                    <span></span>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/user/profile">
                                        <i class="fa-regular fa-address-card"></i>
                                        <span>My Profile</span>
                                    </a>
                                </li>

                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <li>
                                    <button class="dropdown-item" id="sign-out">
                                        <i class="fa-solid fa-right-from-bracket"></i>
                                        Sign
                                        out</button>
                                </li>
                            </ul><!-- End Profile Dropdown Items -->
                        </li>
                    </ul>
                </nav>
            </div>
            {{else}}
            <div class="d-flex">
                <a href="/login" class="btn-login me-2" role="button">
                    Login
                    <div class="arrow-wrapper">
                        <div class="arrow"></div>
                    </div>
                </a>
                <a href="/register" class="btn-signup" role="button">
                    Sign up
                    <div class="arrow-wrapper">
                        <div class="arrow"></div>
                    </div>
                </a>
            </div>
            {{/if}}
        </div>
    </div>
</header>